<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/lib/com.app.tourguide"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/category_attractions"
    android:orientation="vertical"
    tools:context="com.example.android.tourguide.AttractionsActivity">

    <android.support.design.widget.TabLayout
        android:id="@+id/sliding_tabs_attractions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabMode="fixed" />

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager_attractions"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>